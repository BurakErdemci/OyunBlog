@page
@model MainPage.Pages.ForumModel

@{
    ViewData["Title"] = "Forum";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Forum</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-page="/CreateTopic" class="btn btn-primary">Yeni Konu Oluştur</a>
        }
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @if (!Model.Topics.Any())
                    {
                        <p class="text-center">Henüz hiç konu oluşturulmamış.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Konu</th>
                                        <th>Kategori</th>
                                        <th>Yazar</th>
                                        <th>Yanıtlar</th>
                                        <th>Görüntülenme</th>
                                        <th>Tarih</th>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <th>İşlemler</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var topic in Model.Topics)
                                    {
                                        <tr>
                                            <td>
                                                <a asp-page="/Topic" asp-route-id="@topic.Id" class="text-decoration-none">
                                                    @topic.Title
                                                </a>
                                            </td>
                                            <td>@topic.CategoryName</td>
                                            <td>@topic.UserName</td>
                                            <td>@topic.ReplyCount</td>
                                            <td>@topic.ViewCount</td>
                                            <td>@topic.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <td>
                                                    <a asp-page="/EditTopic" asp-route-id="@topic.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                                    <form method="post" asp-page-handler="Delete" asp-route-id="@topic.Id" style="display:inline;">
                                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bu konuyu silmek istediğinize emin misiniz?');">Sil</button>
                                                    </form>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Forum sayfalama">
            <ul class="pagination justify-content-center" style="margin-top:2rem; border:2px solid #e53935; border-radius:12px; padding:0.5rem 1.5rem; background:#fff;">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    @if (Model.CurrentPage == 1)
                    {
                        <span class="page-link" style="color:#e53935; border:none; background:transparent; font-weight:600;">Önceki</span>
                    }
                    else
                    {
                        <a class="page-link" style="color:#e53935; border:none; background:transparent; font-weight:600;"
                           href="@(string.IsNullOrEmpty(Request.Query["q"]) ? $"?page={Model.CurrentPage - 1}" : $"?q={Request.Query["q"]}&page={Model.CurrentPage - 1}")">Önceki</a>
                    }
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        @if (Model.CurrentPage == i)
                        {
                            <span class="page-link" style="color:#fff; background:#e53935; border:none; font-weight:600; border-radius:6px; transition:all 0.2s;">@i</span>
                        }
                        else
                        {
                            <a class="page-link" style="color:#e53935; background:transparent; border:none; font-weight:600; border-radius:6px; transition:all 0.2s;"
                               href="@(string.IsNullOrEmpty(Request.Query["q"]) ? $"?page={i}" : $"?q={Request.Query["q"]}&page={i}")">@i</a>
                        }
                    </li>
                }
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    @if (Model.CurrentPage == Model.TotalPages)
                    {
                        <span class="page-link" style="color:#e53935; border:none; background:transparent; font-weight:600;">Sonraki</span>
                    }
                    else
                    {
                        <a class="page-link" style="color:#e53935; border:none; background:transparent; font-weight:600;"
                           href="@(string.IsNullOrEmpty(Request.Query["q"]) ? $"?page={Model.CurrentPage + 1}" : $"?q={Request.Query["q"]}&page={Model.CurrentPage + 1}")">Sonraki</a>
                    }
                </li>
            </ul>
        </nav>
    }
</div> 